{
  "name": "mtab",
  "author": "Max Hu",
  "version": "1.0.0",
  "description": "a simple configurable new tab extension",
  "keywords": [],
  "scripts": {
    "dev": "mkdir -p dist && parcel src/**/*.html & ./scripts/create_manifest.sh && ./scripts/copy_assets.sh",
    "build": "mkdir -p dist && parcel build src/**/*.html --no-scope-hoist & ./scripts/create_manifest.sh && ./scripts/copy_assets.sh",
    "prettier": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\""
  },
  "dependencies": {
    "parcel": "^2.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.263",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
