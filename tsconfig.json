{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "ES5",
    "sourceMap": false,
    "module": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "lib": ["ES2019", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
