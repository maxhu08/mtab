{
  "compilerOptions": {
    "target": "ES2019",
    "sourceMap": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["./*"]
    },
    "strict": true,
    "noEmitOnError": true,
    "lib": ["ES2019", "DOM"],
    "types": ["chrome", "node"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
