{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "ES2019",
    "sourceMap": false,
    "module": "ESNext",
    "strict": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "lib": ["ES2019", "DOM"],
    "types": ["chrome"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
